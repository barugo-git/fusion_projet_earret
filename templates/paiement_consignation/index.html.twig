{# templates/paiement_consignation/index.html.twig #}
{% extends 'front/status_base.html.twig' %}

{% block title %}Paiement de Consignation{% endblock %}

{% block body %}
    <div class="min-vh-30 d-flex align-items-center">
        <div class="container status-container">
            <div class="status-card">
                <div class="status-header">
                    <h2 class="text-white">
                        <i class="fas fa-money-bill me-3"></i> Paiement de Consignation
                    </h2>
                </div>
                <div class="status-body">
                    <div class="text-center mb-4">
                        <h3 class="mb-3">Vérification du Code de Suivi</h3>
                        <div class="marquee-container">
                            <div class="marquee-content">
                                <i class="fas fa-arrow-right me-2"></i> Entrez votre code de suivi pour vérifier le statut de votre consignation
                            </div>
                        </div>
                    </div>
                    
                    <form action="{{ path('paiement_consignation_verifier') }}" method="post" class="mt-4">
                        <div class="mb-4">
                            <label for="code_suivi" class="form-label fw-bold">Saisissez votre code de suivi</label>
                            <input type="text" class="form-control form-control-status" id="code_suivi" name="code_suivi" required
                                   placeholder="Ex: NPEtiNI">
                        </div>
                        <button type="submit" class="btn btn-status w-100 mt-3">
                            <i class="fas fa-search me-2"></i> Vérifier
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <style>
        /* Animation du marquee */
        .marquee-container {
            overflow: hidden;
            white-space: nowrap;
            margin: 0 auto;
            max-width: 80%;
        }
        
        .marquee-content {
            display: inline-block;
            padding-left: 100%;
            animation: marquee 15s linear infinite;
            color: rgba(255,255,255,0.8);
        }
        
        @keyframes marquee {
            0% { transform: translateX(0); }
            100% { transform: translateX(-100%); }
        }
        
        /* Animation d'entrée */
        .status-card {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }
        
        .status-card.animated {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation d'entrée
            const card = document.querySelector('.status-card');
            setTimeout(() => {
                card.classList.add('animated');
            }, 100);
            
            // Focus sur le champ de saisie
            document.getElementById('code_suivi').focus();
        });
    </script>
{% endblock %}