{# templates/paiement_consignation/erreur.html.twig #}
{% extends 'front/status_base.html.twig' %}

{% block title %}Erreur de Paiement{% endblock %}

{% block body %}
    <div class="min-vh-100 d-flex align-items-center">
        <div class="container status-container">
            <div class="status-card">
                <div class="status-header bg-danger">
                    <h2><i class="fas fa-exclamation-triangle me-2"></i> Erreur de Paiement</h2>
                </div>
                <div class="status-body text-center">
                    <div class="error-icon mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    
                    <div class="alert alert-custom alert-dismissible fade show" role="alert">
                        <h4 class="alert-heading"><i class="fas fa-bug me-2"></i> Oups !</h4>
                        <hr>
                        <p class="mb-0">{{ message }}</p>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a href="{{ path('paiement_consignation_index') }}" class="btn btn-status">
                            <i class="fas fa-arrow-left me-2"></i> Retour à la page de vérification
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <style>
        .error-icon {
            animation: bounce 1s infinite alternate;
        }
        
        @keyframes bounce {
            from { transform: translateY(0); }
            to { transform: translateY(-15px); }
        }
        
        .alert-custom {
            border-left: 4px solid #dc3545;
            border-radius: 8px;
            background-color: #f8f9fa;
        }
        
        .status-header.bg-danger {
            background: linear-gradient(135deg, #dc3545, #f14668) !important;
        }
    </style>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation d'entrée
            const card = document.querySelector('.status-card');
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
{% endblock %}