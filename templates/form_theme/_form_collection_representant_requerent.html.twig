{% block _dossier_requerant_requerant_representants_widget %}
    <p> Représentant(s) du requérant</p>
    <hr>
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter-represantant" value="0">

    <div type="button" id="add-requerent-representant" class="btn btn-outline-primary"><i
                class="ri-add-line align-bottom me-1"></i>Ajouter un représentant</div>

{% endblock %}

{% block _dossier_requerant_requerant_representants_entry_row %}

    {{ form_widget(form) }}
    <hr>
{% endblock %}

  {% block _dossier_requerant_requerant_representants_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-11">
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.nom) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.prenom) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.telephone) }}
                        {{ form_errors(form.telephone) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_row(form.adresse) }}
                        {{ form_errors(form.adresse) }}
                    </div>
                </div>
            </div>
            <div class="col-1">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}
