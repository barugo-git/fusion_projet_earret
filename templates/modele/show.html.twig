{% extends 'base.html.twig' %}

{% block title %}Détails du Modèle de Rapport{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .detail-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }
        
        .card-header {
            background: linear-gradient(135deg, #3a7bd5 0%, #00d2ff 100%);
            border-bottom: none;
            padding: 1.5rem;
        }
        
        /* Style des éléments de liste */
        .list-group-item {
            padding: 1.50rem 1.50rem;
            border-left: none;
            border-right: none;
            display: flex;
            align-items: center;
        }
        
        .list-group-item:not(:last-child) {
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }
        
        .detail-label {
            min-width: 180px;
            display: flex;
            align-items: center;
            color: #495057;
            position: relative;
            padding-right: 15px;
        }
        
        .detail-label::after {
            content: "";
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            height: 60%;
            width: 1px;
            background-color: #dee2e6;
        }
        
        .detail-value {
            padding-left: 15px;
            flex: 1;
        }
        
        /* Styles des boutons simplifiés */
        .btn-action {
            border-radius: 50px;
            padding: 0.5rem 1.25rem;
            margin: 0 5px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="detail-card">
        <div class="card-header text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0 text-white"><i class="fas fa-file-alt me-2"></i>Détails du Modèle</h1>
                <a href="{{ path('app_modele_rapport_index') }}" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Retour
                </a>
            </div>
        </div>
        
        <div class="card-body p-0">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span class="detail-label">
                        <i class="fas fa-building me-2"></i>Nom du modèle
                    </span>
                    <span class="detail-value">{{ modele.nomFichier }}</span>
                </li>
                <li class="list-group-item">
                    <span class="detail-label">
                        <i class="fas fa-building me-2"></i>Structure
                    </span>
                    <span class="detail-value">{{ modele.structure.name }}</span>
                </li>
                <li class="list-group-item">
                    <span class="detail-label">
                        <i class="fas fa-layer-group me-2"></i>Section
                    </span>
                    <span class="detail-value">{{ modele.section.name }}</span>
                </li>
                <li class="list-group-item">
                    <span class="detail-label">
                        <i class="fas fa-tag me-2"></i>Type de Rapport
                    </span>
                    <span class="detail-value">{{ modele.typeRapport }}</span>
                </li>
                <li class="list-group-item">
                    <span class="detail-label">
                        <i class="far fa-calendar-plus me-2"></i>Créé le
                    </span>
                    <span class="detail-value">{{ modele.createdAt|date('d/m/Y à H:i') }}</span>
                </li>
                <li class="list-group-item">
                    <span class="detail-label">
                        <i class="fas fa-calendar-alt me-2"></i>Modifié le
                    </span>
                    <span class="detail-value">{{ modele.UpdateAt|date('d/m/Y à H:i') }}</span>
                </li>
            </ul>
            <div>
                <a href="{{ path('modele_rapport_convert_pdf', {'id': modele.id}) }}" class="btn btn-primary">
                    <i class="fas fa-file-pdf"></i> Voir le modèle en PDF
                </a>
            </div>
        </div>
        
        <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
            <a href="{{ path('app_modele_rapport_edit', {'id': modele.id}) }}" 
                   class="btn btn-warning btn-action">
                   <i class="far fa-edit me-1"></i> Modifier
            </a>
            
            <div>
                <form method="post" 
                      action="{{ path('app_modele_rapport_delete', {'id': modele.id}) }}" 
                      class="d-inline" 
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce modèle ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ modele.id) }}">
                    <button type="submit" class="btn btn-danger btn-action">
                        <i class="far fa-trash-alt me-1"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}