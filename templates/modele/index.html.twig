{% extends 'base.html.twig' %}

{% block title %}Modèle de raports{% endblock %}

{% block stylesheets %}
    {# Intégrez les styles CSS nécessaires ici #}
    <link rel="stylesheet" href="{{ asset('assets/css/datatables.min.css') }}">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header border-1">
                    <div class="row align-items-center gy-3">
                        <div class="col-sm">
                            <h5 class="card-title mb-0">Les modèles de rapports</h5>
                        </div>
                        <div class="col-sm-auto">
                            <div class="d-flex gap-1 flex-wrap">
                                <a class="btn btn-success add-btn" href="{{ path('app_modele_rapport_new') }}">
                                    <i class="ri-add-line align-bottom me-1"></i> Créer un nouveau modèle
                                </a>
                            </div>
                        </div>
                    </div>
                </div><!-- end card header -->

                <div class="card-body">
                    {% if modele_rapports|length > 0 %}
                        <table id="myTable" class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom du fichier</th>
                                    <th>Structure</th>
                                    <th>Section</th>
                                    <th>Type de rapport</th>
                                    <th>Date Ajout</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for modele_rapport in modele_rapports %}
                                    <tr>
                                        <td>{{ modele_rapport.nomFichier }}</td>
                                        <td>{{ modele_rapport.structure.name }}</td>
                                        <td>{{ modele_rapport.section.name }}</td>
                                        <td>{{ modele_rapport.typeRapport }}</td>
                                        <td>{{ modele_rapport.createdAt ? modele_rapport.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <div class="edit">
                                                    <a href="{{ path('app_modele_rapport_show', {'id': modele_rapport.id}) }}" title="Voir">
                                                        <i class="bx bx-show me-1"></i>
                                                    </a>
                                                </div>
                                                <div class="edit">
                                                    <a href="{{ path('app_modele_rapport_edit', {'id': modele_rapport.id}) }}" title="Modifier">
                                                        <i class="bx bx-edit-alt me-1"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="noresult">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop"
                                           colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px">
                                </lord-icon>
                                <h5 class="mt-2">Aucun modèle de rapport pour l'instant</h5>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {# Intégrez les scripts JavaScript nécessaires ici #}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="//cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jszip-3.10.1/dt-2.0.3/b-3.0.1/b-html5-3.0.1/b-print-3.0.1/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'excel', 'csv', 'print', 'pdf']
            });
        });
    </script>
{% endblock %}