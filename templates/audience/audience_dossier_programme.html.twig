            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">{{ audience.avisAudience }} du {{ audience.dateAudience ? audience.dateAudience|date('d-m-Y') : '' }} à {{ audience.heureAudience ? audience.heureAudience|date('H') : '' }}h{{ audience.heureAudience ? audience.heureAudience|date('i') : '' }}</h4>
                </div><!-- end card header -->

