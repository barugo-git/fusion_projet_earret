{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Liste des audiences programméss</h4>
                </div><!-- end card header -->

                <div class="card-body data_table">
                    <table class="table table-striped table-bordered" id="example">
                        <thead>
                        <tr>
                            <th>Audience</th>
                            <th>Dossiers</th>
{#                            <th>Defendeur</th>#}
                            <th>Date Audience</th>
                            {#                              <th>AvisAudience</th>
                          <th>Commentaire</th>#}
{#                            <th>Date</th>#}
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for audience in audiences %}
                            <tr>
{#                                <td>{{ audience.dossiers.referenceDossier }}</td>#}
                                <td>{{ audience.avisAudience }}</td>
                                <td>
                                   <ul>
                                       {% for dossier in audience.dossiers %}
                                           <li>{{ dossier.referenceDossier }}</li>
                                       {% endfor %}
                                   </ul>
                                 </td>

                                <td>{{ audience.dateAudience ? audience.dateAudience|date('d-m-Y') : '' }} à
                                {{ audience.heureAudience ? audience.heureAudience|date('h:i') : '' }}</td>

{#                                <td>{{ audience.commentaire }}</td>#}

                                <td>
                                    <a href="{{ path('greffier_audience_programme',{'id': audience.id}) }}" title="Voir les details du dossier">
                                        <i class="ri-eye-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}







