{% extends 'base.html.twig' %}

{% block title %}New Instructions{% endblock %}

{% block body %}
    {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_CONSEILLER') %}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Création d'une instruction</h4>
                    </div>

                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.libelle) }}</div>
                            <div class="col-md-6">{{ form_row(form.delais) }}</div>
                            <div class="col-md-6">{{ form_row(form.active) }}</div>

                            <div class="hstack gap-2 justify-content-center">
                                <input type="reset" value="Annuler" class="btn btn-light"/>
                                <button type="submit" class="btn btn-success" id="add-btn">Ajouter</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-danger">
            Accès refusé. Vous n'avez pas les permissions nécessaires.
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
{% endblock %}
