{% extends 'base.html.twig' %}

{% block title %}Détails de l'instruction{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">Détails de l'instruction</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="bg-light" style="width: 200px;">ID</th>
                                    <td>{{ instruction.id }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Libellé</th>
                                    <td>{{ instruction.libelle }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Délais (jours)</th>
                                    <td>{{ instruction.delais }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Statut</th>
                                    <td>
                                        <span class="badge {% if instruction.active %}bg-success{% else %}bg-danger{% endif %}">
                                            {{ instruction.active ? 'Actif' : 'Inactif' }}
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="btn-group">
                    <a href="{{ path('app_instructions_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <a href="{{ path('app_instructions_edit', {'id': instruction.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    {{ include('instructions/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
