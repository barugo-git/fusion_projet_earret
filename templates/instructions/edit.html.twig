{% extends 'base.html.twig' %}

{% block title %}Edit Instructions{% endblock %}

{% block body %}
    {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_CONSEILLER') %}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Modification de l'instruction {{ instruction.libelle }}</h4>
                    </div>

                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.libelle) }}</div>
                            <div class="col-md-6">{{ form_row(form.delais) }}</div>
                            <div class="col-md-6">{{ form_row(form.active) }}</div>

                            <div class="hstack gap-2 justify-content-center">
                                <button type="submit" class="btn btn-danger" href="{{ path('app_instructions_index') }}">Fermer</button>
                                <button type="submit" class="btn btn-success" id="add-btn">Modifier</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-danger">
            Accès refusé. Vous n'avez pas les permissions nécessaires.
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{asset('libs/prismjs/prism.js')}}"></script>
    <script src="{{asset('libs/list.js/list.min.js')}}"></script>
    <script src="{{asset('libs/list.pagination.js/list.pagination.min.js')}}"></script>
    <script src="{{asset('js/pages/listjs.init.js')}}"></script>
{% endblock %}
