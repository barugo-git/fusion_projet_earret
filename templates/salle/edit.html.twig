{% extends 'base.html.twig' %}

   {% block body%}

       <div class="row">
           <div class="col-lg-12">
               <div class="card">
                   <div class="card-header">
                       <h4 class="card-title mb-0"> Modification de la salle {{ salle.nom}}</h4>
                   </div><!-- end card header -->

                   <div class="card-body">

                       {{ form_start(form) }}
                       <div class="row">

                           <div class="col-md-6">{{ form_row(form.nom) }}</div>
                           <div class="col-md-6">  {{ form_row(form.structure) }}</div>


                           <div class="hstack gap-2 justify-content-center">
                               <button type="submit" class="btn btn-danger"  href="{{ path('app_salle_index') }}">Fermer</button>
                               <button type="submit" class="btn btn-success" id="add-btn" href="{{ path('app_salle_edit',{'id':salle.id}) }}">Modifier</button>
                               {#                                   <button type="button" class="btn btn-success" id="edit-btn">Update</button>#}
                           </div>
                       </div>
                       {{ form_end(form) }}

                   </div>
               </div>

           </div>

       </div>


   {% endblock %}

{% block javascripts%}
    <!-- prismjs plugin -->
    <script src="{{asset('libs/prismjs/prism.js')}}"></script>
    <script src="{{asset('libs/list.js/list.min.js')}}"></script>
    <script src="{{asset('libs/list.pagination.js/list.pagination.min.js')}}"></script>

    <!-- listjs init -->
    <script src="{{asset('js/pages/listjs.init.js')}}"></script>

{% endblock javascripts%}