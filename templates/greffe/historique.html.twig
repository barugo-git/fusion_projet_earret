{% extends 'base.html.twig' %}

{% block title %}Historique des statuts du Dossier{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Liste des mises à jour du statut du dossier :{{ dossier.referenceDossier }}</h4>
                </div><!-- end card header -->

                <div class="card-body">
                    <div id="customerList">

                        <div class="data_table table-card mt-3 mb-1">
                            {% if mouvements|length > 0 %}
                                <table id="myTable" class="table table-striped table-bordered">
                                    <thead class="table-light">
                                    <tr>
                                        <th class="sort"></th>
                                        <th class="sort" data-sort="customer_name">N°enre</th>
                                        <th class="sort" data-sort="email">Statut</th>
                                        <th class="sort" data-sort="phone">Modifié par</th>
                                        <th class="sort" data-sort="phone">Date Mise à Jourr</th>
                                        <th class="sort" data-sort="action">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for mouvement in mouvements %}
                                        <tr>
                                            <td>{{ loop.index }}</td>
                                            <td class="customer_name">{{ dossier.referenceDossier}}</td>
                                            <td class="email">{{ mouvement.Statut.libelle }}</td>
                                            <td class="email">{{ mouvement.User.fullName }}</td>
                                            <td class="email">{{  mouvement.dateMouvement|date('Y-m-d H:i')}}</td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <div class="edit">
                                                        <a href="{{ path('mouvement_update', {'id': mouvement.id}) }}"
                                                           title="Modifier" data-rec="{{ mouvement.id }}"> <i
                                                                    class="bx bx-edit-alt me-1"></i></a>

                                                        {#                                                       <button class="btn btn-sm btn-success edit-item-btn" #}
                                                        {#                                                               data-bs-toggle="modal" data-bs-target="#showModal">Modifier</button> #}
                                                    </div>


                                                </div>
                                            </td>



                                            {#                                            {{ dump(dossier.userDossiers[0].user.UserIdentifier) }}#}

                                    {% endfor %}
                                    </tbody>
                                </table>
                            {% else %}
                                <div class="noresult">
                                    <div class="text-center">
                                        <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop"
                                                   colors="primary:#121331,secondary:#08a88a"
                                                   style="width:75px;height:75px">
                                        </lord-icon>
                                        <h5 class="mt-2">Aucunes données pour l'instant</h5>

                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
{% block javascripts %}


    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="//cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jszip-3.10.1/dt-2.0.3/b-3.0.1/b-html5-3.0.1/b-print-3.0.1/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'excel', 'csv', 'print', 'pdf']
            });
        });
    </script>


{% endblock %}