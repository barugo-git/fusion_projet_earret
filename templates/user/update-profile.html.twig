{{ include('partials/main.html.twig') }}

<head>
    {{ include('partials/title-meta.html.twig', {title: 'Profile Settings'}) }}
    {{ include('partials/head-css.html.twig') }}
    <style>
        .profile-card {
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .profile-photo-container {
            position: relative;
            width: 150px;
            height: 150px;
            margin: 0 auto;
        }
        
        .profile-photo {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid white;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        
        .profile-actions {
            margin-top: 20px;
            text-align: center;
        }
        
        .btn-change-photo {
            background-color: #6c757d;
            color: white;
            border: none;
            border-radius: 30px;
            padding: 8px 20px;
            font-size: 14px;
            transition: all 0.3s;
        }
        
        .btn-change-photo:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }
        
        .profile-info {
            padding: 20px;
        }
        
        .profile-name {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .profile-title {
            color: #6c757d;
            font-size: 1rem;
        }

        .custom-btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
            transition: background-color 0.3s ease;
        }

        .custom-btn-primary:hover {
            background-color: #0056b3;
        }

        .custom-btn-light {
            background-color: #f8f9fa;
            color: #212529;
            border: 1px solid #ced4da;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .custom-btn-light:hover {
            background-color: #e2e6ea;
            color: #000;
        }

    </style>
</head>

<body>
    <!-- Begin page -->
    <div id="layout-wrapper">
        {{ include('partials/menu.html.twig') }}

        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xxl-3">
                            <div class="card profile-card mt-7">
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <div class="profile-photo-container mb-4">
                                            <img src="{{ app.user.photo ? asset('uploads/profile_photos/' ~ app.user.photo) : asset('images/default-profile.png') }}" 
                                                 class="profile-photo" 
                                                 alt="Photo de profil">
                                        </div>
                                        <h5 class="profile-name">{{ app.user.fullName }}</h5>
                                        <p class="profile-title text-muted">{{ app.user.structure }} / {{ app.user.titre }}</p>
                                        
                                        <div class="profile-actions">
                                            <a href="{{ path('account_photo_update') }}" class="btn btn-change-photo">
                                                <i class="ri-camera-fill align-bottom me-1"></i> Changer la photo
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xxl-9">
                            <div class="card mt-xxl-n7">
                                <div class="card-body p-4">
                                    {{ form_start(form) }}
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="mb-3">
                                                {{ form_row(form.nom, {
                                                    'attr': {'class': 'form-control'},
                                                    'label_attr': {'class': 'form-label'}
                                                }) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="mb-3">
                                                {{ form_row(form.prenoms, {
                                                    'attr': {'class': 'form-control'},
                                                    'label_attr': {'class': 'form-label'}
                                                }) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="mb-3">
                                                {{ form_row(form.telephone, {
                                                    'attr': {'class': 'form-control'},
                                                    'label_attr': {'class': 'form-label'}
                                                }) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="mb-3">
                                                {{ form_row(form.email, {
                                                    'attr': {'class': 'form-control'},
                                                    'label_attr': {'class': 'form-label'}
                                                }) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="mb-3">
                                                {{ form_row(form.titre, {
                                                    'attr': {'class': 'form-select'},
                                                    'label_attr': {'class': 'form-label'}
                                                }) }}
                                            </div>
                                        </div>
                                        
                                        <div class="col-lg-12 text-center mt-4">
                                            <div class="btn-group">
                                                <button type="submit" class="btn custom-btn-primary me-2">
                                                    <i class="ri-save-line align-bottom me-1"></i> Enregistrer
                                                </button>
                                                <a href="{{ path('app_index') }}" class="btn custom-btn-light">
                                                    <i class="ri-close-line align-bottom me-1"></i> Annuler
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{ include('partials/footer.html.twig') }}
        </div>
    </div>

    {{ include('partials/vendor-scripts.html.twig') }}
    <script src="{{ asset('js/pages/profile-setting.init.js') }}"></script>
    <script src="{{ asset('js/app.js') }}"></script>
</body>
</html>