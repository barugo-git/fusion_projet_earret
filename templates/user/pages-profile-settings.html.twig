{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="card-title mb-0 text-white">Réinitialisation du compte de {{ user.fullName }}</h1>
                        <a href="{{ path('app_index') }}" class="btn btn-light btn-sm">
                            <i class="ri-arrow-left-line"></i> Retour
                        </a>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <div class="position-relative d-inline-block">
                            <img src="{{ user.photo ? asset('uploads/profile_photos/' ~ user.photo) : asset('images/default-profile.png') }}" 
                                 class="rounded-circle border border-4 border-primary shadow"
                                 width="150" 
                                 height="150"
                                 style="object-fit: cover;"
                                 alt="Photo de profil">
                            <span class="position-absolute bottom-0 end-0 bg-primary rounded-circle p-2 shadow">
                                <i class="ri-lock-fill text-white"></i>
                            </span>
                        </div>
                        <h3 class="mt-3 fw-bold">{{ user.fullName }}</h3>
                        <p class="text-muted">Réinitialisation du mot de passe</p>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.newPassword, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Nouveau mot de passe'
                                        }
                                    }) }}
                                    {{ form_label(form.newPassword, null, {
                                        'label_attr': {'class': 'form-label'}
                                    }) }}
                                    <div class="invalid-feedback">
                                        Veuillez entrer un mot de passe valide
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.confirmPassword, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Confirmer le mot de passe'
                                        }
                                    }) }}
                                    {{ form_label(form.confirmPassword, null, {
                                        'label_attr': {'class': 'form-label'}
                                    }) }}
                                    <div class="invalid-feedback">
                                        Les mots de passe doivent correspondre
                                    </div>
                                </div>
                            </div>
                         {{ form_end(form) }}

                            <div class="col-12">
                                <div class="d-flex justify-content-center gap-3 mt-4">
                                    <a href="{{ path('app_index') }}" class="btn btn-outline-danger px-4">
                                        <i class="ri-close-line me-1"></i> Annuler
                                    </a>
                                    <button type="submit" class="btn btn-success px-4">
                                        <i class="ri-refresh-line me-1"></i> Réinitialiser
                                    </button>
                                </div>
                            </div>
                        </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }
    
    .form-floating {
        position: relative;
        margin-bottom: 1.5rem;
    }
    
    .form-floating label {
        color: #6c757d;
        transition: all 0.3s;
    }
    
    .form-control {
        height: calc(3.5rem + 2px);
        border-radius: 10px;
        padding: 1rem 1.25rem;
        border: 1px solid #e0e0e0;
        transition: all 0.3s;
    }
    
    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        border-color: #86b7fe;
    }
    
    .btn {
        border-radius: 10px;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s;
    }
    
    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }
    
    .btn-success:hover {
        background-color: #157347;
        transform: translateY(-2px);
    }
    
    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
    }
    
    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }
</style>
{% endblock %}