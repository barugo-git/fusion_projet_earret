{% extends 'base.html.twig' %}


{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Liste des dossiers ouverts</h4>
                </div><!-- end card header -->

                <div class="card-body">


                    <div class="data_table">
                        {% if dossiers|length > 0 %}
                            <table id="exemple" class="table table-striped table-bordered" >
                                <thead class="table-light">
                                <tr>
                                    <th class="sort"></th>
                                    <th class="sort" data-sort="customer_name">N°enreg</th>
                                    <th class="sort" data-sort="customer_name">N° Dossier</th>
                                    <th class="sort" data-sort="customer_name">N° reference</th>
                                    <th class="sort" data-sort="email">Date enreg</th>
                                    <th class="sort" data-sort="phone">Réquerant</th>

                                    <th class="sort" data-sort="date">Defendeur</th>

                                    <th class="sort" data-sort="action">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for dossier in dossiers %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td class="customer_name">{{ dossier.referenceEnregistrement }}</td>
                                        <td class="customer_name">{{ dossier.referenceDossier }}</td>
                                        <td class="customer_name">{{ dossier.referenceDossierComplet }}</td>
                                        <td class="email">{{ dossier.dateEnregistrement ? dossier.dateEnregistrement|date('Y-m-d') : '' }}</td>
                                        <td class="email">
                                            {% if dossier.requerant.type =='moral' %}

                                                {{ dossier.requerant.intitule }}
                                            {% else %}

                                                {{ dossier.requerant.nom ~" "~ dossier.requerant.prenoms }}
                                            {% endif %}
                                            {#                                            {{ dossier.requerant.nom ~" "~ dossier.requerant.prenoms }}#}
                                            ({{ dossier.requerant.Telephone }})
                                        </td>

                                        <td class="email">{{ dossier.defendeur.nom ~" "~ dossier.defendeur.prenoms }}
                                            ({{ dossier.defendeur.telephone }})
                                        </td>
                                        <td>
                                            {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_PCA') or is_granted('ROLE_PCJ') or is_granted('ROLE_PROCUREUR_GENERAL') or is_granted('ROLE_PCS') or is_granted('ROLE_PRESIDENT_DE STRUCTURE')%}


                                            {#                                            {% elseif  is_granted('ROLE_AGENT_DE_SAISIE') %}#}
                                            {#                                                <a href="{{ path('admin_dossier_details',{'id':dossier.id}) }}" title="Voir les details du dossier">#}
                                            {#                                                    <i class="ri-eye-fill"></i>#}
                                            {#                                                </a>#}
                                            {#                                                <div class="dropdown">#}
                                            {#                                                    <a href="#" role="button" id="dropdownMenuLink5" data-bs-toggle="dropdown" aria-expanded="false">#}
                                            {#                                                        <i class="ri-more-2-fill"></i>#}
                                            {#                                                       #}
                                            {#                                                    </a>#}

                                            {#                                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink5">#}
                                            {#                                                        <li><a class="dropdown-item" href="#">View</a></li>#}
                                            {#                                                        <li><a class="dropdown-item" href="#">Edit</a></li>#}
                                            {#                                                        <li><a class="dropdown-item" href="#">Delete</a></li>#}
                                            {#                                                    </ul>#}
                                            {#                                                </div>#}

                                            <div class="dropdown">
                                                <a href="#" role="button" id="dropdownMenuLink1"
                                                   data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="ri-more-2-fill"></i>
                                                </a>

                                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink1">
                                                    <li><a class="dropdown-item"
                                                           href="{{ path('admin_affecter_dossier_structure_new',{'id': dossier.id}) }}">A
                                                            une structure</a></li>

                                                    <li><a class="dropdown-item"
                                                           href="{{ path('parquet_general_affectations_avocat',{'id': dossier.id}) }}">A
                                                            un avocat général</a></li>


                                                    <li><a class="dropdown-item"
                                                           href="{{ path('admin_dossier_affections',{'id': dossier.id}) }}">Voir
                                                            les affections</a></li>
                                                    <li><a class="dropdown-item"
                                                           href="{{ path('admin_dossier_details',{'id':dossier.id}) }}">Details
                                                            du dossier</a></li>

                                                </ul>
                                            </div>
                                        </td>
                                        {% endif %}


                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <div class="noresult">
                                <div class="text-center">
                                    <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop"
                                               colors="primary:#121331,secondary:#08a88a"
                                               style="width:75px;height:75px">
                                    </lord-icon>
                                    <h5 class="mt-2">Aucune donnée pour l'instant</h5>
