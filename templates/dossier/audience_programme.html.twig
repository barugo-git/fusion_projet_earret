{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">{{ audience.avisAudience }}
                    du
                    à {{ audience.heureAudience ? audience.heureAudience|date('H') : '' }}
                    h{{ audience.heureAudience ? audience.heureAudience|date('i') : '' }}</h4>
            </div><!-- end card header -->

            <div class="card-body">
                <h2>Audience du {{ audience.dateAudience ? audience.dateAudience|date('d-m-Y') : '' }}
                    à {{ audience.heureAudience ? audience.heureAudience|date('H') : '' }}
                    h{{ audience.heureAudience ? audience.heureAudience|date('i') : '' }}
                </h2>
                <h3>
                    Section : {{ app.user.sections.name }}
