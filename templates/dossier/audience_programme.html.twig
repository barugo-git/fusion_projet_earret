                <table class="table align-middle" id="customerTable">
                    <thead class="table-light">
                    <tr>
                        {#                            <th class="sort"></th> #}

                        <th class="sort" data-sort="id"></th>
                        <th class="sort" data-sort="id">N°Dossiers</th>
                        <th class="sort" data-sort="customer_name">Nom & prénoms du demandeur</th>
                        <th class="sort" data-sort="email">Decision attaquée</th>
                        <th class="sort" data-sort="customer_name">Nom & prénoms du defendeur</th>
                        <th class="sort" data-sort="date">Decision</th>

                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td colspan="6" class="text-center"> <h2>{{ audience.avisAudience }}</h2></td>
                    </tr>
                    {% for dossier in audience.dossiers %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ dossier.referenceDossier }}</td>
                        <td>
                            {% if dossier.requerant.type =='moral' %}

                                {{ dossier.requerant.intitule }}
                            {% else %}

                                {{ dossier.requerant.nom ~" "~ dossier.requerant.prenoms }}
                            {% endif %}

                            {% if dossier.requerant.conseil %} <br>
                                {%if (dossier.requerant.conseil | length) > 0 %}
                                (


                                {% for conseiller in dossier.requerant.conseil %}
                                    {{ conseiller.fullName }}
                                    {% if conseiller.nomCabinet %}
                                        <br>
                                        du cabinet
                                        {{ conseiller.nomCabinet }}
                                    {% endif %} <br>
                                {% endfor %}
                                )
                            {% endif %}
                            {% endif %}

                        </td>
                        <td>
                            {{ dossier.objet.name }}
                        </td>
                        <td>
                            {% if dossier.defendeur.type =='moral' %}

                                {{ dossier.defendeur.intitule }}
                            {% else %}

                                {{ dossier.defendeur.nom ~" "~ dossier.defendeur.prenoms }}
                            {% endif %} <br>

                            {% if dossier.defendeur.defendeurs %}
                            {%if (dossier.defendeur.defendeurs | length) > 0 %}
                                (
                                {% for defendeurs in dossier.defendeur.defendeurs %}
                                    {{ defendeurs.fullName }}
                                    {% if defendeurs.nomCabinet %}
                                        <br>
                                        du cabinet
                                        {{ defendeurs.nomCabinet }}
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            )
                            {% endif %}
                        </td>
