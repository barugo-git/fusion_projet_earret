{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Liste des arrêts</h4>
                </div><!-- end card header -->

                <div class="card-body">
                    <div id="customerList">
