{#                        <div class="table-responsive table-card mt-3 mb-1">#}
                            <table class="table align-middle table-nowrap" id="customerTable">
                                <thead class="table-light">
                                <tr>
                                    {#                            <th class="sort"></th>#}

                                    <th class="sort" data-sort="id">Dossier</th>
                                    <th class="sort" data-sort="customer_name">Date Arret</th>
                                    <th class="sort" data-sort="email">Numéro de l"arrêt</th>
                                    <th class="sort" data-sort="date">Réquerant</th>
                                    <th class="sort" data-sort="phone">Defendeur</th>

                                    <th class="sort" data-sort="status">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for arret in arrets %}
                                    <tr>
                                        <td class="id"> {{ arret.dossier.referenceDossier }}
                                            - {{ arret.dossier.referenceDossier }}</td>
                                        <td class="customer_name">{{ arret.dateArret ? arret.dateArret|date('Y-m-d H:i:s') : '' }}</td>
                                        <td class="email">{{ arret.numArret }}</td>
                                        <td class="date">
                                            {% if  arret.dossier.requerant.type =='moral' %}

                                                {{ arret.dossier.requerant.intitule }}
                                            {% else %}

                                                {{ arret.dossier.requerant.nom ~" "~  arret.dossier.requerant.prenoms }}
                                            {% endif %}
                                        </td>
                                        <td class="phone">
                                            {% if  arret.dossier.defendeur.type =='moral' %}
                                                {{ arret.dossier.defendeur.intitule }}

                                            {% else %}
                                                {{ arret.dossier.defendeur.nom ~" "~  arret.dossier.defendeur.prenoms }}
                                            {% endif %}
                                        </td>
                                        <td class="status">
                                            <div class="dropdown">
                                                <a href="#" role="button" id="dropdownMenuLink5" data-bs-toggle="dropdown"
                                                   aria-expanded="false">
                                                    <i class="ri-more-2-fill"></i>
                                                </a>

                                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink5">
                                                    <li><a class="dropdown-item" href="#">Plus de détails</a></li>
                                                    <li><a class="dropdown-item" href="/uploads/{{ asset(arret.arret) }}">Télécharger
                                                            l'arrêt</a></li>
                                                    {% if arret.forclusion %}
                                                        <li><a class="dropdown-item"
                                                               href="/uploads/{{ asset(arret.forclusion) }}">Télécharger la
                                                                forclusion</a></li>
                                                    {% endif %}

                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
{% endblock %}
