{# templates/rapport/_delete_form.html.twig #}
<form method="post" action="{{ path('rapport_delete', {'id': rapport.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce rapport ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rapport.id) }}">
    <button type="submit" class="btn btn-danger"><i class="bx bx-trash me-1"></i> Supprimer</button>
</form>