{% block body %}

    <section class="bg-light pb-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <h4 class="mb-3 text-center">Veuillez renseigner le numéro de suivi de votre recours</h4>
                                        </div>

                                        <div class="col-lg-8 offset-lg-2">
                                            {{ form_start(form) }}
                                            {{ form_widget(form) }}
                                            <div class="col-md-12 col-sm-12 text-center">
                                                <button class="btn btn-primary">{{ button_label|default("Vérifier le statut") }}</button>
                                            </div>
                                            {{ form_end(form) }}
                                        </div>

                                        {% if status is defined %}
                                            {% if dossier is not null and dossier.mouvements is not empty %}
                                                <div class="col-lg-12">
                                                    <hr>
                                                    <small class="text-muted">Statut:</small> <br>
                                                    {% if status == 'Dossier au Rôle' and dossier.calendrier%}
                                                        <strong>{{ status }} |</strong>
                                                        <a href="{{ asset(dossier.pathCalendrier) }}" target="_blank">Télécharger le Rôle</a>
                                                    {% elseif status == 'Dossier vidé : Arrêt disponible' %}
                                                        <strong>{{ status }}</strong>
                                                        {% if dossier.arrets is not empty %}
                                                            | <a href="/uploads/{{ asset(dossier.arrets[0].arret) }}" target="_blank">Télécharger l'Arrêt</a>
                                                        {% endif %}
                                                    {% else %}
                                                        <strong>{{ status }}</strong>
                                                    {% endif %}
                                                </div>
                                            {% else %}
                                                <strong>Statut: EN COURS DE TRAITEMENT</strong>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

